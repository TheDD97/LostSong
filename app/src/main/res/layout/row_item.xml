<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|center_vertical"
android:paddingLeft="10dp" android:paddingRight="10dp">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent"
                  android:orientation="vertical" android:gravity="center_horizontal|center_vertical"
    >
        <ImageView android:layout_width="250dp" android:layout_height="250dp" android:id="@+id/image_view"
                   android:src="@drawable/dream" android:scaleType="centerInside" android:cropToPadding="true"
                   android:adjustViewBounds="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/text_view"
                  android:textSize="28sp" android:textStyle="bold" android:gravity="center_horizontal|fill_horizontal"
                  android:textAlignment="center" android:fontFamily="@font/rocknroll_typo_regular"/>
    </LinearLayout>

</RelativeLayout>