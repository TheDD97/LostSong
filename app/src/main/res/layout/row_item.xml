<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:paddingLeft="10dp" android:paddingRight="10dp">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="vertical" android:gravity="center_horizontal|center_vertical"
                      android:layout_weight="0">
            <ImageView android:layout_width="250dp" android:layout_height="250dp" android:id="@+id/image_view"
                       android:src="@drawable/dream" android:scaleType="centerInside" android:cropToPadding="true"
                       android:adjustViewBounds="true" android:layout_weight="1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/text_view"
                      android:textSize="28sp" android:textStyle="bold"
                      android:gravity="center_horizontal|fill_horizontal"
                      android:textAlignment="center" android:fontFamily="@font/rocknroll_typo_regular"/>
        </LinearLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp" app:srcCompat="@drawable/line" android:id="@+id/imageView5"
                android:layout_weight="0" android:cropToPadding="true" android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp" android:clickable="true"/>
    </LinearLayout>

</RelativeLayout>