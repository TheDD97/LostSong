<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_horizontal"
              android:layout_centerHorizontal="true" android:layout_gravity="center_horizontal|center_vertical"
              android:id="@+id/homeLayout" android:background="@drawable/homebkg">

    <ImageButton
            android:id="@+id/goSongList"
            android:layout_weight="1"
            android:layout_height="250dp"
            android:layout_width="250dp" android:scaleType="centerCrop" android:background="@drawable/gamelogo"
            android:layout_marginTop="10dp"/>
    <TextView
            android:text="Tap the image to continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/home_text" android:layout_weight="1"
            android:textAlignment="center" android:layout_marginBottom="20dp" android:textSize="24sp"
            android:fontFamily="@font/rocknroll_typo_regular"/>
</LinearLayout>