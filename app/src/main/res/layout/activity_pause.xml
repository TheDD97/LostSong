<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.domslab.lostsong.view.PauseActivity" android:baselineAligned="false"
        android:gravity="center_horizontal|center_vertical" android:background="@drawable/pause_background">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_resume" android:id="@+id/resume"
            android:layout_weight="1" android:layout_marginRight="20dp" app:backgroundTint="#BF050505"
            android:backgroundTint="#B7514E4E"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_restart" android:id="@+id/retry"
            android:layout_weight="1" android:layout_marginRight="20dp" app:backgroundTint="#BF050505"
            android:backgroundTint="#B7514E4E"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_home" android:id="@+id/home"
            android:layout_weight="1" android:layout_marginRight="20dp" app:backgroundTint="#BF050505"
            android:backgroundTint="#B7514E4E"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_song_list" android:id="@+id/golist"
            android:layout_weight="1" app:backgroundTint="#BF050505"
            android:backgroundTint="#B7514E4E"/>
</LinearLayout>