<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.domsLab.lostsong.PauseActivity" android:baselineAligned="false">


    <androidx.gridlayout.widget.GridLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="3"
            app:rowCount="1" app:columnCount="1" app:columnOrderPreserved="true"
            android:layout_gravity="center_horizontal|center_vertical">

        <TextView
                android:text="@string/song_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/golist" android:layout_weight="1"
                app:layout_gravity="center" android:textSize="18sp"/>
        <TextView
                android:text="@string/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/home" android:layout_weight="1"
                app:layout_gravity="center" android:textSize="18sp"/>
        <TextView
                android:text="@string/retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/retry" android:layout_weight="1"
                app:layout_gravity="center" android:textSize="18sp"/>
        <TextView
                android:text="@string/resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/resume" android:layout_weight="1"
                app:layout_gravity="center" android:textSize="18sp"/>
    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>